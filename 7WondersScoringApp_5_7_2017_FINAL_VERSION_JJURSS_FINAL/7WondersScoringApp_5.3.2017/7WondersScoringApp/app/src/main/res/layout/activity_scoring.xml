<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <EditText
            android:id="@+id/player_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/player1"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/player_two_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/player2"
            android:textAlignment="center"/>
    </LinearLayout>
    <!-- row 1 end -->


    <!-- row 2 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >

        <!-- col 1 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/blue_points"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:textSize="15sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/green_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green"
                android:textSize="15sp"
                android:layout_marginTop="21.5dp" />

            <TextView
                android:id="@+id/yellow_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow"
                android:textSize="15sp"
                android:layout_marginTop="21dp"/>

            <TextView
                android:id="@+id/purple_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purple"
                android:textSize="15sp"
                android:layout_marginTop="20.5dp"/>

            <TextView
                android:id="@+id/wonder_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wonder"
                android:textSize="14sp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/science_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textSize="14sp"
                android:layout_marginTop="23dp"/>

            <TextView
                android:id="@+id/money_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Coins"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/military_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Military"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/calcBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calc"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
        <!-- col 1 end -->

        <!-- col 2 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/p1_blue_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Blue"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_green_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Green"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_yellow_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Yellow"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_purple_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Purple"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_wonder_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Wonder"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_science_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Science"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_money_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Money"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <EditText
                android:id="@+id/p1_military_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Military"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"/>

            <CheckBox
                android:id="@+id/p1_military_victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Military"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <CheckBox
                android:id="@+id/p1_science_victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/p1_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="PTS"
                android:textSize="50sp"
                android:layout_gravity="center"
                android:textAlignment="center" />

        </LinearLayout>
        <!-- col 2 end -->

        <!-- col 3 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/p2_blue_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Blue"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_green_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Green"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_yellow_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Yellow"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_purple_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Purple"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_wonder_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Wonder"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_science_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Science"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_money_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Money"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/p2_military_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Military"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/p2_military_victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Military"
                android:textAlignment="center"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/p2_science_victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Science"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/p2_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="PTS"
                android:textAlignment="center"
                android:textSize="50sp" />

        </LinearLayout>
    </LinearLayout>
    <!-- col 3 end -->


</LinearLayout>